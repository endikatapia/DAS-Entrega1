<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragmentLista"
        android:name="com.example.das_entrega1.FragmentLVMultipleChoice"
        android:layout_width="225dp"
        android:layout_height="246dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/fragmentFotoIndv"
        android:name="com.example.das_entrega1.FragmentDetalles"
        android:layout_width="224dp"
        android:layout_height="240dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/fragmentLista"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFinalizar"
        android:layout_width="112dp"
        android:layout_height="98dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="156dp"
        android:onClick="onClickFinalizar"
        android:text="@string/finalizarPedido"
        app:layout_constraintStart_toEndOf="@+id/fragmentFotoIndv"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>